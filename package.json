{
  "name": "scss-base-sites",
  "version": "1.0.18",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scss-base/sites.git"
  },
  "author": "K. Media GbR <hello@kmedia.email> (http://kmedia.rocks)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/scss-base/sites/issues"
  },
  "homepage": "https://github.com/scss-base/sites/#readme",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "7.6.2",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/preset-env": "7.6.2",
    "@babel/register": "7.6.2",
    "@types/chai": "4.2.3",
    "@types/mocha": "5.2.7",
    "autoprefixer": "9.6.1",
    "babel-eslint": "10.0.3",
    "babel-loader": "8.0.6",
    "chai": "4.2.0",
    "clean-css-cli": "4.3.0",
    "jsdom": "15.1.1",
    "jsdom-global": "3.0.2",
    "mocha": "10.2.0",
    "node-sass": "4.13.1",
    "nodemon": "1.19.2",
    "npm-run-all": "4.1.5",
    "nyc": "14.1.1",
    "postcss-cli": "6.1.3",
    "stylelint": "11.0.0",
    "stylelint-config-recommended-scss": "4.0.0",
    "stylelint-config-standard": "19.0.0",
    "stylelint-order": "3.1.1",
    "stylelint-scss": "3.11.1",
    "ts-node": "8.4.1",
    "typescript": "3.6.3",
    "webpack": "4.40.2",
    "webpack-cli": "3.3.9"
  },
  "scripts": {
    "css": "npm-run-all css-compile css-prefix css-minify",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/scss/base.scss dist/css/base.css",
    "css-lint": "stylelint --syntax scss 'src/scss/**/*.scss'",
    "css-minify": "cleancss --level 1 --format breaksWith=lf --source-map --source-map-inline-sources --output dist/css/base.min.css dist/css/base.css",
    "css-prefix": "postcss --config postcss.config.js --replace 'dist/css/*.css' '!dist/css/*.min.css'",
    "javascript": "npm-run-all --parallel javascript-compile javascript-minimize",
    "javascript-compile": "webpack",
    "javascript-minimize": "webpack --env.MINIMIZE",
    "typescript": "npm-run-all typescript-compile javascript",
    "typescript-compile": "tsc",
    "typescript-test": "mocha",
    "typescript-coverage": "nyc mocha",
    "watch": "npm-run-all --parallel watch-css watch-typescript",
    "watch-css": "nodemon --watch src/scss/ --ext scss --exec 'npm run css'",
    "watch-typescript": "nodemon --watch src/ts/ --watch test/ts/ --ext ts --exec 'npm run typescript'",
    "dist": "npm-run-all --parallel css javascript",
    "test": "npm run typescript-test"
  }
}
