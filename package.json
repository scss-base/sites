{
  "name": "scss-base-sites",
  "version": "1.0.17",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scss-base/sites.git"
  },
  "author": "K. Media GbR <hello@kmedia.email> (http://kmedia.rocks)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/scss-base/sites/issues"
  },
  "homepage": "https://github.com/scss-base/sites/#readme",
  "dependencies": {
    "normalize-scss": "7.0.1",
    "rxjs-es": "5.0.0-beta.12"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.2.3",
    "@babel/preset-env": "7.2.3",
    "@babel/register": "7.0.0",
    "autoprefixer": "9.4.3",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.4",
    "chai": "4.2.0",
    "clean-css-cli": "4.2.1",
    "eslint": "5.11.1",
    "jsdom": "13.1.0",
    "jsdom-global": "3.0.2",
    "mocha": "5.2.0",
    "node-sass": "4.11.0",
    "nodemon": "1.18.9",
    "npm-run-all": "4.1.5",
    "nyc": "13.1.0",
    "postcss-cli": "6.1.0",
    "stylelint": "9.9.0",
    "stylelint-config-recommended-scss": "3.2.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-order": "2.0.0",
    "stylelint-scss": "3.4.4",
    "webpack": "4.28.3",
    "webpack-cli": "3.1.2"
  },
  "scripts": {
    "css": "npm-run-all css-compile css-prefix css-minify",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/scss/base.scss dist/css/base.css",
    "css-lint": "stylelint --syntax scss 'src/scss/**/*.scss'",
    "css-minify": "cleancss --level 1 --format breaksWith=lf --source-map --source-map-inline-sources --output dist/css/base.min.css dist/css/base.css",
    "css-prefix": "postcss --config postcss.config.js --replace 'dist/css/*.css' '!dist/css/*.min.css'",
    "javascript": "npm-run-all javascript-compile",
    "javascript-compile": "webpack",
    "javascript-lint": "eslint src/js/**/*js test/js/**/*js",
    "javascript-test": "nyc --reporter=text mocha --require @babel/register --require jsdom-global/register 'test/**/*.js'",
    "watch": "npm-run-all --parallel watch-css watch-javascript",
    "watch-css": "nodemon --watch src/scss/ --ext scss --exec 'npm run css'",
    "watch-javascript": "nodemon --watch src/js/ --watch test/js/ --ext js --exec 'npm run javascript'",
    "dist": "npm-run-all --parallel css javascript",
    "test": "npm run javascript:test:mocha"
  }
}
